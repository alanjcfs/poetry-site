<h1>Listing poems</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :text_cont %>
  <%= f.text_field :text_cont %>
  <%= f.submit %>
<% end %>

<table>
  <tr>
    <th>Johnson</th>
    <th>Title</th>
  </tr>

<% @poems.each do |poem| %>
  <tr>
    <td><%= poem.johnson %></td>
    <td><%= link_to poem, poem %></td>
  </tr>
<% end %>
</table>

<%= paginate @poems %>

